<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.missionDetail.MissionDetailFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_arrow_back"
            app:borderWidth="0dp"
            app:elevation="4dp"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue_munshell" />

        <ImageView
            android:id="@+id/iv_detail_mission"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/no_image_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lineImg"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line_bottom_img"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_mission" />

        <TextView
            android:id="@+id/tv_foundation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Yayasan Jalinan Kasih"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_mission" />

        <TextView
            android:id="@+id/tv_foundation_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Malang, Jawa Timur"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_foundation_name"
            app:layout_constraintStart_toStartOf="@id/tv_foundation_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_foundation_name" />

        <TextView
            android:id="@+id/tv_foundation_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="081212912121"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_foundation_name"
            app:layout_constraintStart_toStartOf="@id/tv_foundation_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_foundation_location" />

        <TextView
            android:id="@+id/tv_foundation_phone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_baseline_home_work_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Jl. Fatmawati No 10"
            android:textSize="14sp"
            app:drawableTint="@color/grey"
            app:layout_constraintEnd_toEndOf="@id/tv_foundation_name"
            app:layout_constraintStart_toStartOf="@id/tv_foundation_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_foundation_phone" />

        <Button
            android:id="@+id/btn_call_wa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_shape"
            android:text="Contact Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:transitionName="action_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_foundation_phone2"
            app:layout_constraintStart_toStartOf="@+id/tv_foundation_phone2"
            app:layout_constraintTop_toBottomOf="@+id/tv_foundation_phone2"
            tools:ignore="TextContrastCheck,TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>